#include<stdio.h>
double triangleArea(double b,double h);
int main()
{
    double base,height,area;
    printf("Enter base:\n");
    scanf("%lf",&base);

    printf("Enter height:\n");
    scanf("%lf",&height);

    area=triangleArea(base,height);
    printf("area of the triangle is:%lf\n",area);
}

double triangleArea(double b,double h)
{
    return 0.5*b*h;
}


